#env.Append( CPPDEFINES = [ 'VE_USER_PLUGIN_LIBRARY' ] )
  
#xerces_options.apply( env )
#tao_options.apply( env )
lemon_options.apply( env )
#mysqlpp_options.apply( env )
#poco_options.apply( env )

prog = ves_pkg.createProgram( 'ves_hello_lemon' + env[ "PROGSUFFIX" ], env, 'bin' )
prog.addSources( sources )
prog.addHeaders( headers )
prog.build()
