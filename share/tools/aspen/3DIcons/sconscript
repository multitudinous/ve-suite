##sets up files used in network view
import os, sys, string
pj = os.path.join
import SConsAddons.Util as sca_util

Import('ves_pkg buildDir')

launcherBundle = ves_pkg.createFileBundle( pj('share','vesuite','xplorer','3DIcons') )
iveFile = sca_util.getFilesRecursiveByExt( '.', ['.ive'] )
launcherBundle.addFiles( iveFile )
