##Builds idl skeleton files for veopen
import os, sys, string
pj = os.path.join
import SConsAddons.Util as sca_util

Import('ves_pkg', 'RootDir')
env = ves_pkg.getEnv().Copy()

launcherBundle = ves_pkg.createFileBundle( 'bin' )
##Move frozen code to PREFIX if it exists.
frozenVelauncherCode = pj(RootDir, 'VE_Installer','installer','dist','velauncher')

frozenFile = ['velauncher']

##To freeze velauncher.py, please use "scons freeze" option first.
if os.path.exists(frozenVelauncherCode):
    print "Checking for Frozen launcher file... [OK]"
    launcherBundle.addFiles( frozenFile )
else:
    print "Checking for Frozen launcher file... [NO]"
    print "*** If you want to freeze the launcher code, please run \"scons freeze\" option first. ***"
