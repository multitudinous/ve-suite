##Builds VE_EventManager
import os, sys, string
import SConsAddons.Util as sca_util
pj = os.path.join

Import('baseEnv ves_pkg LIBDIR vtk_options boost_options RootDir vpr_options')
Import('gmtl_options vrjuggler_options buildDir osg_options poco_options')

srcDir = os.path.abspath( pj(RootDir, 'src', 'ves', 'xplorer', 'eventmanager') )
sources = sca_util.getSourcesRecursive( srcDir )
headers = sca_util.getHeadersRecursive( srcDir )

lib_env = ves_pkg.getEnv().Clone()

#vtk_options.apply( lib_env )
boost_options.apply( lib_env )
vpr_options.apply( lib_env )
#gmtl_options.apply( lib_env )
vrjuggler_options.apply( lib_env )
#osg_options.apply( lib_env )
poco_options.apply( lib_env )

lib_env.Append( CPPDEFINES = ['VE_EVENTMANAGER_LIBRARY'] )

if baseEnv['StaticLibs'] == "yes":
   lib = ves_pkg.createStaticAndSharedLibrary('ves_xplorer_eventmanager',
                                                        lib_env,
                                                        installPrefix = LIBDIR)
else:
   lib = ves_pkg.createSharedLibrary('ves_xplorer_eventmanager', lib_env,
                                               installPrefix = LIBDIR)
   
lib.addSources(sources)
lib.addHeaders(headers,  pj( 'ves', 'xplorer', 'eventmanager'))
lib.build()
