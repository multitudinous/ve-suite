##Builds Exe_server
import os, sys, string
pj = os.path.join

Import('ves_pkg LIBDIR PREFIX buildDir xerces_options')

srcs = Split("""
   Exe_server.cxx 
   Executive_i.cxx 
   Execute_Thread.cxx
   QueryThread.cxx
""")

env = ves_pkg.getEnv().Copy()
env.Append(LIBS = ['ves_open_xml', 'ves_ce_util', 'ves_open_module'])
env.Append(LIBPATH = [
                        pj('#', buildDir, 'src','ves','ce','util'),
                        pj('#', buildDir, 'src','ves','open'),
                        pj('#', buildDir, 'src','ves','open','xml')
                     ])

env.ParseConfig('flagpoll Boost.Filesystem TAO TAO_IORInterceptor TAO_ObjRefTemplate TAO_Valuetype \
                              TAO_CosNaming TAO_Svc_Utils TAO_IORTable TAO_Messaging \
                              TAO_PortableServer TAO_BiDirGIOP TAO_AnyTypeCode --libs --cflags')

xerces_options.apply( env )
ce_prog = ves_pkg.createProgram('ves_ce.exe', env, 'bin')
ce_prog.addSources( srcs )
ce_prog.build()

