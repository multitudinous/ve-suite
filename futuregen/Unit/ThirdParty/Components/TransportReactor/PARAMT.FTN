C*                    *****  PARAMTR.FTN  *****
C*
C*            units used:
C*        length         (m)
C*        weight         (kg)
C*        time           (s)
C*        temperature    (K)
C*        mole           (mol)
C*  --->  pressure       (Pa)
C*          etc.
C*
C***********************************************************************
C*
C*            identifiers in the program:
C*        i            size class
C*        j            gas specy
C*        k            riser cell
C*        n (leading)  absolute number of something
C*        p            phases (core, annulus, bubble)
C*
C***********************************************************************
C*
C*        all program commands in CAPITALS 
C*        comments in small letters
C*        comments with leading C*
C*        temporary changes and redundant commands with leading C
C*
C***********************************************************************
C*
C*      do not allow the standard fortran type declaration
!zc      IMPLICIT NONE
C*
C***********************************************************************
C*
C*    This file includes all PARAMETERS and SETTINGS
C*
C*        NI   max number of size classes
C*        NJ   max number of species
C*        NK   max number of cells
C*        NM   max number of materials
C*        NP   max number of phases
C*        NMAX max array used in linear equations
C*
C*
      INTEGER NI,NJ,NK,NM,NP,NMAX

      PARAMETER (NI=20,NJ=20,NK=500,NM=5,NP=3,NMAX=500)
C*
C***********************************************************************
C*
C*        NMAT      number of solid materials (coal,lime,inert,char,bed)
C*        NSPECY    number of species used in calulation
C*        NPRE      number of species used in precalculation
C*        NPOST     number of species used in postcalculation
C*
      INTEGER NMAT, NSPECY, NPRE, NPOST

      PARAMETER (NMAT = NM, NSPECY = 14, NPRE=6, NPOST=14)
C*
C***********************************************************************
C*
C*           input output device identifiers (5=keyboard, 6=screen)
C*                                           (99=log-file)
      INTEGER IN, IOUT, LOG

      PARAMETER (IN    = 5)
      PARAMETER (IOUT  = 6)
      PARAMETER (LOG   = 99)
C*
C***********************************************************************
C*
C*           identifiers of the gas species arrays
C*
      INTEGER  CO  , CO2, O2 , H2O, N2 , SO2, NO, H2, NO2, CH4
      INTEGER  C2H6, NH3, N2O, H2S

      PARAMETER (CO   =  1 )
      PARAMETER (CO2  =  2 )
      PARAMETER (H2O  =  3 )
      PARAMETER (H2   =  4 )
      PARAMETER (N2   =  5 )
      PARAMETER (SO2  =  6 )
      PARAMETER (NO   =  7 )
      PARAMETER (NO2  =  8 )
      PARAMETER (CH4  =  9 )
      PARAMETER (O2   = 10 )
      PARAMETER (C2H6 = 11 )
      PARAMETER (NH3  = 12 )
      PARAMETER (N2O  = 13 )
      PARAMETER (H2S  = 14 )

C*
C***********************************************************************
C*
C*         identifiers for the DIAM,RHOS,SIV
C*
      INTEGER COAL, LIME, INERT, COKE, BED

      PARAMETER (COAL   = 1)
      PARAMETER (LIME   = 2)
      PARAMETER (INERT  = 3)
      PARAMETER (COKE   = 4)
      PARAMETER (BED    = 5)
C*
C***********************************************************************
C*
C*            identifiers for core, annulus and bubble phases
C*
      INTEGER CORE, ANNU, BUBB

      PARAMETER (CORE = 1)
      PARAMETER (ANNU = 2)
      PARAMETER (BUBB = 3)
C*
C***********************************************************************
C*
C*             identifiers for the coal and char analysis COALM, CHARM
C*             C,H,O,N,S,MOISture,ASH,VOLATile fraction, FIXED carbon
C*
      INTEGER COALC,COALH,COALO,COALN,COALS,MOIS,ASH,VOLAT,FIXED

      PARAMETER (COALC =  1 )
      PARAMETER (COALH =  2 )
      PARAMETER (COALO =  3 )
      PARAMETER (COALN =  4 )
      PARAMETER (COALS =  5 )
      PARAMETER (MOIS  =  6 )
      PARAMETER (ASH   =  7 )
      PARAMETER (VOLAT =  8 )
      PARAMETER (FIXED =  9 )

C*
C***********************************************************************
C*
C*       constants 
C*
      REAL*8  G,PI,RG,SBOLTZ,VAPH2O

      PARAMETER (G      = 9.81   )     ! gravity acceleration (m/s2)
      PARAMETER (PI     = 3.1415 )     ! Pi
      PARAMETER (RG     = 8.314  )     ! gas constant (J/molK)
      PARAMETER (SBOLTZ = 5.67E-8)     ! Stefan-Boltzmann constant (W/m2K4)
      PARAMETER (VAPH2O = 2500.E+3)    ! evaporation enthalpy of water (J/kg)
C*
C***********************************************************************
