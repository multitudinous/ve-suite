##Builds osgWxTree
sources = sca_util.getSourcesRecursive( pj( openDir, 'src', 'osgWxTree' ) )
headers = sca_util.getHeadersRecursive( pj( openDir, 'include','osgWxTree')  )
headers = map(lambda s: pj('include','osgWxTree', s), 
                headers)
sources = map(lambda s: pj('src', 'osgWxTree', s), 
                sources)

lib_env = ves_pkg.getEnv().Clone()
lib_env.Append( CPPPATH = [pj(openDir, 'include' )] )
lib_env.Append( CPPDEFINES  = ['OSGWXTREE_LIBRARY'] )

osg_options.apply( lib_env )
wxwidgets_options.apply( lib_env )

if GetPlatform() == 'linux':
    lib_env.Append( CXXFLAGS=['-fPIC'])

lib = ves_pkg.createSharedLibrary('osgWxTree', lib_env,
                                               installPrefix = LIBDIR)
   
lib.addSources(sources)
#lib.addHeaders(headers, pj('..') )
lib.build()
