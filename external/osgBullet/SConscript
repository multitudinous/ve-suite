##Builds osgBullet
#!python
import os, sys, string
pj = os.path.join
import SConsAddons.Util as sca_util

Import('baseEnv ves_pkg LIBDIR RootDir buildDir osg_options GetPlatform')
openDir = os.path.abspath( pj(RootDir, 'external', 'osgBullet') )
sources = sca_util.getSourcesRecursive( pj( openDir, 'src', 'osgBullet' ) )
headers = sca_util.getHeadersRecursive( pj( openDir, 'include','osgBullet')  )
headers = map(lambda s: pj('include','osgBullet', s), 
                headers)
sources = map(lambda s: pj('src', 'osgBullet', s), 
                sources)

lib_env = ves_pkg.getEnv().Copy()
lib_env.Append( CPPPATH = [pj(openDir, 'include' )] )
lib_env.Append( CPPPATH = [pj(RootDir, 'external','bullet-2.72','src' ) ] )
lib_env.Append( CPPPATH = [pj(RootDir, 'external','bullet-2.72','Extras') ] )
lib_env.Append( CPPDEFINES  = ['OSGBULLET_LIBRARY', 'osgBullet_EXPORTS'] )
lib_env.Append( LIBS = ['bullet','XML','COLLADA_DOM','BulletColladaConverter'] )
lib_env.Append( LIBPATH = [pj('#', buildDir,'external', 'bullet-2.72')] )

osg_options.apply( lib_env )

if GetPlatform() == 'linux':
    lib_env.Append( CXXFLAGS=['-fPIC'])

if GetPlatform() == 'win32':
   lib_env['no_import_lib'] = 1
   lib_env['WINDOWS_INSERT_MANIFEST'] = False

lib = ves_pkg.createStaticLibrary('osgBullet', lib_env,
                                               installPrefix = LIBDIR)
   
lib.addSources(sources)
#lib.addHeaders(headers, pj('..') )
lib.build()


###############################################################
##Builds libXML
openDir = os.path.abspath( pj(RootDir, 'external', 'osgBullet') )
sources = sca_util.getSourcesRecursive( pj( openDir, 'applications','osgbpp' ) )
sources = map(lambda s: pj('applications','osgbpp', s), sources)

lib_env = ves_pkg.getEnv().Copy()
lib_env.Append( CPPPATH = [pj(openDir, 'include' )] )
lib_env.Append( CPPPATH = [pj(RootDir, 'external','bullet-2.72','src' ) ] )
lib_env.Append( CPPPATH = [pj(RootDir, 'external','bullet-2.72','Extras') ] )
lib_env.Append( CPPDEFINES  = ['OSGBULLET_LIBRARY', 'osgBullet_EXPORTS'] )
lib_env.Append( LIBS = ['bullet','XML','COLLADA_DOM','BulletColladaConverter','osgBullet'] )
lib_env.Append( LIBPATH = [pj('#', buildDir,'external', 'bullet-2.72')] )
lib_env.Append( LIBPATH = [pj('#', buildDir,'external', 'osgBullet')] )

osg_options.apply( lib_env )

if GetPlatform() == 'linux':
    lib_env.Append( CXXFLAGS=['-fPIC'])

multiblock = ves_pkg.createProgram('osgbpp' + lib_env["PROGSUFFIX"], lib_env, 'bin')
multiblock.addSources(sources)
multiblock.build()
