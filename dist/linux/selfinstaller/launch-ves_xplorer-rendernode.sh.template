#!/bin/bash

source __VE_SUITE_ENV_FILE_PLACEHOLDER__

function usage()
{
    echo "usage: $0 -p <listen port>"
    exit 1
}

LISTEN_PORT=""

while getopts "p:" OPT
do
    case ${OPT} in
        p)
            LISTEN_PORT=${OPTARG}
            ;;
        ?)
            usage
            exit 1
            ;;
    esac
done


if [ -z "${LISTEN_PORT}" ]
then
    usage
    exit 1
fi
 
ves_xplorer --vrjslave --listen_port=${LISTEN_PORT} --VESLog=debug --VESRTT
