#!/bin/bash

source __VE_SUITE_ENV_FILE_PLACEHOLDER__

function usage()
{
    echo "usage: $0 -p <listen port>"
    exit 1
}

LISTEN_PORT=""

while getopts "p:" OPT
do
    case ${OPT} in
        p)
            LISTEN_PORT=${OPTARG}
            ;;
        ?)
            usage
            exit 1
            ;;
    esac
done


export DISPLAY=:0
HOSTNAME=`hostname`

if [ -z $VES_LOG_LEVEL ]
then
    export VES_LOG_LEVEL=warning
fi

if [ -z "${LISTEN_PORT}" ]
then
    ves_xplorer --vrjslave --VESRTT --VESLog=$VES_LOG_LEVEL --VESLogPath="${VES_PREFIX}"/debug."${HOSTNAME}".log
else
    ves_xplorer --vrjslave --listen_port=${LISTEN_PORT} --VESRTT --VESLog=$VES_LOG_LEVEL --VESLogPath="${VES_PREFIX}"/debug."${HOSTNAME}".log
fi
