PACKAGE_NAME=glog
BASE_DIR="${DEV_BASE_DIR}/glog-0.3.3"

SOURCE_RETRIEVAL_METHOD=wget
SOURCE_FORMAT=tgz
SOURCE_URL=http://google-glog.googlecode.com/files/glog-0.3.3.tar.gz

SOURCE_DIR="${BASE_DIR}"
BUILD_DIR="${BASE_DIR}/build-${ARCH}"
INSTALL_DIR="${BASE_DIR}/install-${ARCH}"

case $PLATFORM in
  Windows)
    unset PROJ_STR
    unset BUILD_TARGET
    unset PREBUILD_METHOD
    BUILD_METHOD=devenv
    MSVC_CONFIG=Release

    PREBUILD_METHOD=custom
    unset CUSTOM_PREBUILD

    MSVC_SOLUTION+=( "${SOURCE_DIR}/google-glog.sln" )

    if (( "${VS_VERSION/.*}" > 9 )); then
      CUSTOM_PREBUILD=( "${MSVC_SOLUTION[@]/#/${DEVENV} }" )
      CUSTOM_PREBUILD=( "${CUSTOM_PREBUILD[@]/%/ /upgrade}" )
    fi

    if [ ${ARCH} = "32-bit" ]; then
      MSVC_PLATFORM=Win32
      #PLATFORM_SUFFIX=
      BUILD_STR="Release"
    else
      MSVC_PLATFORM=x64
      PLATFORM_SUFFIX=_x64
      BUILD_STR="x64/Release"

      if (( "${VS_VERSION/.*}" > 9 )); then
        CUSTOM_PREBUILD+=( "find \"${SOURCE_DIR}/vsprojects\" -type f -name \"*.vcxproj\" -exec sed -i '/^\s*<OutDir>\$(SolutionDir)\$(Configuration)\\\\<\/OutDir>\s*$/d;/^\s*<IntDir>\$(Configuration)\\\\<\/IntDir>\s*$/d' {} \;" )
      else
        CUSTOM_PREBUILD+=( "find \"${SOURCE_DIR}/vsprojects\" -type f -name \"*.vcproj\" -exec sed -i '/^\s*OutputDirectory=\"\$(SolutionDir)\$(ConfigurationName)\"/d;/^\s*IntermediateDirectory=\"\$(ConfigurationName)\"\s*$/d' {} \;" )
      fi
      CUSTOM_PREBUILD+=( "find \"${SOURCE_DIR}\" -type f -name \"*.sln\" -exec sed -i 's/Win32/x64/g' {} \;" )
      CUSTOM_PREBUILD+=( "find \"${SOURCE_DIR}/vsprojects\" -type f -name \"*.vc*proj\" -exec sed -i 's/Win32/x64/g;s/WIN32/WIN64/g;s/MachineX86/MachineX64/g;s/Win32Proj/x64Proj/g' {} \;" )
    fi

    #POST_BUILD_METHOD="find . -name \*.pdb -exec cp {} ${INSTALL_DIR}/lib/. \; -print"
    POST_BUILD_METHOD="mkdir -p ${INSTALL_DIR} && mkdir -p ${INSTALL_DIR}/include && mkdir -p ${INSTALL_DIR}/lib && \
                cp -R ../src/windows/glog ${INSTALL_DIR}/include/. && \
                cp ../${BUILD_STR}/*.lib ${INSTALL_DIR}/lib/. && \
                cp ../${BUILD_STR}/*.pdb ${INSTALL_DIR}/lib/. && \
                cp ../${BUILD_STR}/*.dll ${INSTALL_DIR}/lib/."
    FPC_FILE=glog.fpc
    SKIP_FPC_INSTALL="no"
    ;;
  Darwin |  Linux)
    BUILD_TARGET="install"
    PREBUILD_METHOD=configure
    CONFIGURE=../configure
    CONFIGURE_PARAMS+=( --prefix="${INSTALL_DIR}" )
    ;;
esac
