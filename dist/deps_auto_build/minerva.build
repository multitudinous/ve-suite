PACKAGE_NAME=MINERVA

BASE_DIR="${DEV_BASE_DIR}/minervagis"

SOURCE_RETRIEVAL_METHOD=hg
SOURCE_URL=https://minervagis.googlecode.com/hg/

SOURCE_DIR="${BASE_DIR}"
BUILD_DIR="${BASE_DIR}/build-${ARCH}"
INSTALL_DIR="${BASE_DIR}/install-${ARCH}"

PREBUILD_METHOD=cmake

SKIP_FPC_INSTALL="no"
FPC_FILE=Minerva.fpc

export OSG_INC_DIR="${OSG_INSTALL_DIR}/include"
export OSG_LIB_DIR="${OSG_INSTALL_DIR}/lib"

CMAKE_PARAMS+=( -DCMAKE_INSTALL_PREFIX="${INSTALL_DIR}" )
CMAKE_PARAMS+=( -DBUILD_MINERVA_QT=ON )

CMAKE_PARAMS+=( -DBoost_LIBRARY_DIRS="${BOOST_INSTALL_DIR}/lib" )
CMAKE_PARAMS+=( -DOSG_INC_DIR="${OSG_INSTALL_DIR}/include" )
CMAKE_PARAMS+=( -DOSG_INCLUDE_DIR="${OSG_INSTALL_DIR}/include" )
#CMAKE_PARAMS+=( -DOSG_LIB_DIR="${OSG_INSTALL_DIR}/lib" )
CMAKE_PARAMS+=( -DBOOST_ROOT="${BOOST_INSTALL_DIR}" )
CMAKE_PARAMS+=( -DBoost_NO_SYSTEM_PATHS=ON )

CMAKE_PARAMS+=( -DGDAL_INCLUDE_DIR="${gdal_INSTALL_DIR}/include" )

VES_INSTALL_PARAMS+=( lib )
VES_INSTALL_PARAMS+=( bin )
VES_INSTALL_PARAMS+=( share )

case $PLATFORM in
  Windows)
    CMAKE_PARAMS+=( -DCMAKE_CONFIGURATION_TYPES="${BUILD_TYPE}" )
    MSVC_CONFIG="${BUILD_TYPE}"
    if [ ${ARCH} = "32-bit" ]; then
      MSVC_PLATFORM=Win32
    else
      MSVC_PLATFORM=x64
    fi
    
    CMAKE_PARAMS+=( -DOPENTHREADS_LIBRARY_RELEASE="${OSG_INSTALL_DIR}/lib/libOpenThreads.lib" )
    CMAKE_PARAMS+=( -DOSGDB_LIBRARY_RELEASE="${OSG_INSTALL_DIR}/lib/libosgDB.lib" )
    CMAKE_PARAMS+=( -DOSGGA_LIBRARY_RELEASE="${OSG_INSTALL_DIR}/lib/libosgGA.lib" )
    CMAKE_PARAMS+=( -DOSGTEXT_LIBRARY_RELEASE="${OSG_INSTALL_DIR}/lib/libosgText.lib" )
    CMAKE_PARAMS+=( -DOSGUTIL_LIBRARY_RELEASE="${OSG_INSTALL_DIR}/lib/libosgUtil.lib" )
    CMAKE_PARAMS+=( -DOSGVIEWER_LIBRARY_RELEASE="${OSG_INSTALL_DIR}/lib/libosgViewer.lib" )
    CMAKE_PARAMS+=( -DOSG_LIBRARY_RELEASE="${OSG_INSTALL_DIR}/lib/libosg.lib" )

    CMAKE_PARAMS+=( -DZLIB_INCLUDE_DIR="${ZLIB_INSTALL_DIR}/include" )
    CMAKE_PARAMS+=( -DBoost_INCLUDE_DIR="${BOOST_INSTALL_DIR}/include/${BOOST_VERSION_DIR}" )
    CMAKE_PARAMS+=( -DSQLITE_INCLUDE_DIR="${VTK_INSTALL_DIR}/include/${VTK_VERSION_DIR}/vtksqlite;${VTK_INSTALL_DIR}/include/${VTK_VERSION_DIR}" )
    CMAKE_PARAMS+=( -DSQLITE_LIBRARY="${VTK_INSTALL_DIR}/lib/${VTK_VERSION_DIR}/libvtksqlite.dylib" )
    CMAKE_PARAMS+=( -DXERCESC_INCLUDE_DIR="${XERCES_INSTALL_DIR}/include" )

    MSVC_SOLUTION="backdropFX.sln"
    #MSVC_PROJECT_NAMES+=( INSTALL )
    ;;
  Darwin)
    CMAKE_PARAMS+=( -DOPENTHREADS_LIBRARY_RELEASE="${OSG_INSTALL_DIR}/lib/libOpenThreads.dylib" )
    CMAKE_PARAMS+=( -DOSGDB_LIBRARY_RELEASE="${OSG_INSTALL_DIR}/lib/libosgDB.dylib" )
    CMAKE_PARAMS+=( -DOSGGA_LIBRARY_RELEASE="${OSG_INSTALL_DIR}/lib/libosgGA.dylib" )
    CMAKE_PARAMS+=( -DOSGTEXT_LIBRARY_RELEASE="${OSG_INSTALL_DIR}/lib/libosgText.dylib" )
    CMAKE_PARAMS+=( -DOSGUTIL_LIBRARY_RELEASE="${OSG_INSTALL_DIR}/lib/libosgUtil.dylib" )
    CMAKE_PARAMS+=( -DOSGVIEWER_LIBRARY_RELEASE="${OSG_INSTALL_DIR}/lib/libosgViewer.dylib" )
    CMAKE_PARAMS+=( -DOSG_LIBRARY_RELEASE="${OSG_INSTALL_DIR}/lib/libosg.dylib" )

    CMAKE_PARAMS+=( -DBUILD_GDAL_PLUGIN_AS_BUNDLE=ON )
    CMAKE_PARAMS+=( -DCMAKE_BUILD_TYPE="${BUILD_TYPE}" )
    CMAKE_PARAMS+=( -DZLIB_INCLUDE_DIR="/usr/include" )
    CMAKE_PARAMS+=( -DZLIB_LIBRARY="/usr/lib/libz.dylib" )
    CMAKE_PARAMS+=( -DGDAL_LIBRARY="${gdal_INSTALL_DIR}/lib/libgdal.dylib" )
    CMAKE_PARAMS+=( -DSQLITE_INCLUDE_DIR="/usr/include" )
    CMAKE_PARAMS+=( -DSQLITE_LIBRARY="/usr/lib/libsqlite3.dylib" )
    CMAKE_PARAMS+=( -DXERCESC_INCLUDE_DIR="${XERCES_INSTALL_DIR}/include" )
    CMAKE_PARAMS+=( -DXERCESC_LIBRARY_RELEASE="${XERCES_INSTALL_DIR}/lib/libxerces-c.dylib" )
    CMAKE_PARAMS+=( -DBoost_INCLUDE_DIR="${BOOST_INSTALL_DIR}/include" )
    ;;
  Linux)
    CMAKE_PARAMS+=( -DOPENTHREADS_LIBRARY_RELEASE="${OSG_INSTALL_DIR}/lib/libOpenThreads.so" )
    CMAKE_PARAMS+=( -DOSGDB_LIBRARY_RELEASE="${OSG_INSTALL_DIR}/lib/libosgDB.so" )
    CMAKE_PARAMS+=( -DOSGGA_LIBRARY_RELEASE="${OSG_INSTALL_DIR}/lib/libosgGA.so" )
    CMAKE_PARAMS+=( -DOSGTEXT_LIBRARY_RELEASE="${OSG_INSTALL_DIR}/lib/libosgText.so" )
    CMAKE_PARAMS+=( -DOSGUTIL_LIBRARY_RELEASE="${OSG_INSTALL_DIR}/lib/libosgUtil.so" )
    CMAKE_PARAMS+=( -DOSGVIEWER_LIBRARY_RELEASE="${OSG_INSTALL_DIR}/lib/libosgViewer.so" )
    CMAKE_PARAMS+=( -DOSG_LIBRARY_RELEASE="${OSG_INSTALL_DIR}/lib/libosg.so" )

    CMAKE_PARAMS+=( -DCMAKE_BUILD_TYPE="${BUILD_TYPE}" )
    CMAKE_PARAMS+=( -DZLIB_INCLUDE_DIR="${ZLIB_INSTALL_DIR}/include" )
    CMAKE_PARAMS+=( -DZLIB_LIBRARY="${ZLIB_INSTALL_DIR}/lib/libz.so" )
    CMAKE_PARAMS+=( -DGDAL_LIBRARY="${gdal_INSTALL_DIR}/lib/libgdal.so" )
    #CMAKE_PARAMS+=( -DSQLITE_INCLUDE_DIR="/usr/include" )
    #CMAKE_PARAMS+=( -DSQLITE_LIBRARY="/usr/lib64/libsqlite3.so" )
    CMAKE_PARAMS+=( -DCURL_INCLUDE_DIR="${curl_INSTALL_DIR}/include" )
    CMAKE_PARAMS+=( -DCURL_LIBRARY_RELEASE="${curl_INSTALL_DIR}/lib/libcurl.so" )
    CMAKE_PARAMS+=( -DSQLITE_INCLUDE_DIR="${sqlite_INSTALL_DIR}/include" )
    CMAKE_PARAMS+=( -DSQLITE_LIBRARY="${sqlite_INSTALL_DIR}/lib/libsqlite3.so" )
    CMAKE_PARAMS+=( -DXERCESC_INCLUDE_DIR="/usr/include" )
    CMAKE_PARAMS+=( -DXERCESC_LIBRARY_RELEASE="/usr/lib64/libxerces-c.so" )
    CMAKE_PARAMS+=( -DBoost_INCLUDE_DIR="${BOOST_INSTALL_DIR}/include" )
    CMAKE_PARAMS+=( -DCMAKE_CXX_FLAGS="-fPIC" )
    CMAKE_PARAMS+=( -DCMAKE_C_FLAGS="-fPIC" )
    ;;
esac
