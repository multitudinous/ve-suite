##Builds VE_ModelLib
import os, sys, string
pj = os.path.join

Import('baseEnv')
Import('libPath')

srcs = Split("""
   Point.cxx
   Port.cxx
   Link.cxx
   Network.cxx
   Model.cxx
   Tag.cxx
   ModelCreator.cxx 
""")

##srcs = map(lambda s: pj('#', 'VE_Open', 'XML', 'Model', s), srcs)

env = baseEnv.Copy()
env.Append(LIBS = ['VE_XMLLib',
                   'VE_CADLib', 'VE_ShaderLib'])
env.ParseConfig('flagpoll xerces --libs --cflags')

targetLib = pj(env[ 'LIBDIR' ], 'VE_ModelLib')
env.SharedLibrary(target = targetLib, source = srcs)
