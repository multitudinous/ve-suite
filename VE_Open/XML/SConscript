import os, sys, string
import practice
pj = os.path.join

Import( 'xerces' )

Import('baseEnv')
Import('libPath')
Import('cfdHostType')

xml_srcs = Split("""
   CreationEventHandler.cxx 
   Command.cxx
   DataValuePair.cxx
   FloatArray.cxx
   OneDDoubleArray.cxx
   TwoDDoubleArray.cxx
   ThreeDDoubleArray.cxx
   OneDIntArray.cxx
   TwoDIntArray.cxx
   ThreeDIntArray.cxx
   OneDStringArray.cxx
   ParameterBlock.cxx
   StateInfo.cxx
   Transform.cxx
   User.cxx
   XMLCreator.cxx
   XMLObject.cxx
   XMLObjectFactory.cxx
   XMLReaderWriter.cxx
   DOMDocumentManager.cxx
""")

xml_srcs = map(lambda s: pj('#', 'VE_Open', 'XML', s), xml_srcs)

env = baseEnv.Copy()
#VE_SUITE_HOME = os.getenv('VE_SUITE_HOME','')
#env.Append(CPPPATH = [os.getcwd()])
env.Append(CPPPATH = ['#'])
env.Append(CPPPATH = pj( os.getenv('XERCESCROOT',''), 'include') )
#env.Append(LIBPATH = libPath,
#              LIBS = 'vrshares')
for lib in xerces:
    env.Append(LIBS = lib)

##Imitates dzr.apr.mk
if cfdHostType == "Darwin":
    suffix = "-1-config"
else:
    suffix = "-config"
env.ParseConfig('apr%s --includes --cppflags --link-ld --libs' %suffix)
env.ParseConfig('apu%s --includes --link-ld --libs' %suffix)
##End dzr.apr.mk imitation.

targetLib = pj(libPath, 'VE_XMLLib')
env.SharedLibrary(target = targetLib, source = xml_srcs)
#env.Program(pj('#','bin',Platform,'VE_Open','VE_XML'), source = srcs)
